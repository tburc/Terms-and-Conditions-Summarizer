{
  "name": "AI Terms and Conditions Summarizer",
  "description": "This extension summarizes those pesky terms and conditions for you using AI!",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],

  "side_panel": {
    "default_path": "tcSummarizerArea.html"},
  "background": {
    "service_worker": "sidebar.js"
  },

  "action": {
    "default_popup": "intro.html",
    "default_icon": "extension_logo.png"
  },
  
  "content_scripts": [{
  "matches": ["<all_urls>"],
  "js": ["contentScript.js"]
}]
}